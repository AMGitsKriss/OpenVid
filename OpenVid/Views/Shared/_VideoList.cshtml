@model OpenVid.Models.Shared.VideoListViewModel

<div class="row">
    @foreach (var video in Model.Videos)
    {
        <a href="@Url.Action("Index", "Play", new { Area = "playback", Id = video.Id })" data-toggle="tooltip" title="@video.Name">
            <div class="tile">
                <div style="width: 300px;        height: 168px;        background: url('@video.ThumbnailUrl'), url('/img/thumb.png');        position: relative;">
                    <span style="color: white; background-color: #00000088; padding:2px 5px; position:absolute; bottom:0;right:0;">
                        @video.Length
                    </span>
                </div>
                <b>@video.Name</b>
            </div>
        </a>
        <p></p>
    }
</div>

<hr />

@if (Model.HasNextPage)
{
    <a id="loadMore" class="btn btn-info" data-page="@Model.NextPageNumber" data-search-query="@Model.SearchQuery">Load More</a>
}