@model OpenVid.Models.Curation.CurationViewModel

<div class="container">
    <div class="row">
        <div class="col-2 border-right">
            SIDEBAR
        </div>
        <div class="col-10">
            <h3 class="row">Search Results</h3>

            <p>Total save-able space: @Model.VideosForDeletion.Sum(v => v.SizeMb) MB</p>

            @foreach (var video in Model.VideosForDeletion)
            {
                <div class="row border-right mb-2">
                    <div class="col-2">
                        <img src="@video.ThumbnailUrl" onerror="this.onerror = null; this.src = '/img/thumb.png';" style="max-width:100%;"/>
                    </div>

                    <div class="col-6">
                        <a href="@Url.Action("Index", "Play", new { md5 = video.Md5 })" data-toggle="tooltip" title="@video.Name"><div class="tile"><b>@video.Name</b></div></a>
                    </div>
                    <div class="col-2">
                        Size: @video.SizeMb MB <br />
                        Length: @video.Length
                    </div>
                    <div class="col-2">
                        <button class="btn btn-danger">Delete</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>