@model OpenVid.Areas.Tags.Models.Management.TagManagementViewModel
@{
    ViewBag.Title = "Tag Management";
}
<div class="breadcrumb float-right">
    <a class="btn btn-dark m-r-10" data-toggle="tooltip" href="@Url.Action("RefreshImplications", "Edit", new { Area = "Catalog"})" title="Churn through all videos and make sure implication tags are present.">Refresh Implications</a>
    <button disabled class="btn btn-dark" data-toggle="tooltip" title="Check for unused tags and delete them.">Kull Unused</button>
</div>

<h3 class="page-header">
    Tag Management
</h3>


<div class="row">
    <div class="col-md-12">
        @using (Html.BeginPanel("Find Tags", true))
        {
            <table class="table">
                <thead>
                    <tr>
                        <th class="col-1" scope="col">#</th>
                        <th class="col-3" scope="col">Name</th>
                        <th class="col-1" scope="col">Type</th>
                        <th class="col-1" scope="col">Total</th>
                        <th class="col-6" scope="col">Implications</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Tags)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>@item.Type</td>
                            <td>@item.Total</td>
                            <td>@string.Join(", ", item.Implications.Select(i => i.Value))</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>