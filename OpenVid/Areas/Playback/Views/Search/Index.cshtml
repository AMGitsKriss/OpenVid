@model OpenVid.Areas.Playback.Models.Search.SearchViewModel
@{ 
    ViewBag.Title = Model.SearchString;
    ViewBag.SearchString = Model.SearchString;
}
<div class="container">
    <div class="row">
        <div class="col-2 border-right">
            @{await Html.RenderPartialAsync("_TagList", Model.Tags);}
        </div>
        <div class="col-10">
            <h3 class="row">Search Results</h3>
            <a id="loadMore"></a>
            <script>
                $(document).ready(function () {
                    loadMore(1, '@Model.SearchString');
                });
            </script>
        </div>
    </div>
</div>